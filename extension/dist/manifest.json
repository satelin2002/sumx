{
  "manifest_version": 3,
  "name": "SumX - PDF & Web Summarizer",
  "version": "1.0.0",
  "description": "Summarize PDFs and web pages with AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles/sidebar.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "content.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
