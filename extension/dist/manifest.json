{
  "manifest_version": 3,
  "name": "SumX - PDF & Web Summarizer",
  "version": "1.0.0",
  "description": "Summarize PDFs and web pages with AI",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-Cvi0V6RM.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "css": [
        "assets/content-C3FOJO6U.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "https://fonts.googleapis.com/css2?family=Geist:wght@300;400;500;600;700&display=swap",
        "assets/content-BXZnbzkT.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
